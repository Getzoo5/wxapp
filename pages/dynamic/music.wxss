/* pages/dynamic/music.wxss */
.weui-navbar{
  background: #fff
}
.weui-navbar__item .weui-navbar__title{
  color: #7f7f7f
}
.weui-bar__item_on .weui-navbar__title{
  color: #3BC583!important
}
.weui-navbar__item {
  padding: 11px 0;
}
.weui-navbar__slider {
  height: 2px;
}
.weui-tab__panel {
  padding-top: 48px
}
.mine{
  width: 100%;
  padding: 20rpx;
  background: #fff
}
.mine .mine_header{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: block;
  float: left
}
.mine .zuan{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: block;
  float: right;
}
.mine .mine_name{
  width: 100%;
  height: 100%;
  padding: 0 120rpx 0 100rpx;
  font-size: 28rpx;
  color: #7f7f7f
}
.mine .mine_name view:first-of-type{
  color: #666
}
.mine .mine_name view text{
  color: #3BC583
}