/* zan */
.friends_tool{
  width: 100%;
  padding: 20rpx 16rpx;
  box-sizing: border-box
}
.left_tool{
  display: inline-block;
  width: 50%;
  font-size: 26rpx;
  height: 46rpx;
  line-height: 46rpx;
}
.right_tool{
  display: inline-block;
  width: 50%;
  text-align: right;
}
.friends_tool image{
  width: 46rpx;
  vertical-align: middle;
  margin-left: 35rpx
}



.friends_zan{
  width: 100%;
  padding: 0 16rpx;
  line-height: 100%;
  box-sizing: border-box
}
.friends_zan image{
  width: 35rpx;
  margin-right: 20rpx;
  vertical-align: middle
}
.friends_zanin{
  font-size: 24rpx;
  color: #063C6E;
}



.friends_talk{
  width: 100%;
  padding: 20rpx 16rpx 10rpx;
  font-size: 24rpx;
  box-sizing: border-box
}
.friends_talk .lis{
  padding: 4rpx 0
}
.friends_talk .lis view{
  padding: 0
}
.friends_talk .lis text.talk_name{
  color: #063C6E
}